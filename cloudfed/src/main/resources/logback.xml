<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
        <pattern>%gray(%20.20logger{0}) %gray(%d) [%highlight(%p)] %m%n</pattern>
      </encoder>
    </appender>

    <root level="debug">
      <appender-ref ref="STDOUT" />
    </root>
  </configuration>
